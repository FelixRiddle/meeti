<main class="contenedor contenedor-formularios">
	<h1><%= title %></h1>
	
	<form
		action="/auth/register"
		method="POST"
		class="default-form"
	>
		<div class="campo">
			<label for="email">Email</label>
			<input type="email" id="email" name="email" placeholder="Email" value="<%= userData.email %>" required />
		</div>
		
		<div class="campo">
			<label for="name">Name</label>
			<input type="text" id="name" name="name" placeholder="Name" value="<%= userData.name %>" required />
		</div>
		
		<div class="campo">
			<label for="password">Password</label>
			<input type="password" id="password" name="password" placeholder="Password" value="<%= userData.password %>" required />
		</div>
		
		<div class="campo">
			<label for="confirmPassword">Confirm password</label>
			<input
				type="password"
				id="confirmPassword"
				name="confirmPassword"
				placeholder="Confirm password"
				value="<%= userData.confirmPassword %>"
				required
			/>
		</div>
		
		<div class="campo">
			<input type="submit" value="Create account" class="btn btn-rosa" />
		</div>
	</form>
</main>

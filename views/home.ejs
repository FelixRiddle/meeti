<link rel="stylesheet" href="/public/css/meeti/index.css" />

<!-- Introduction -->
<div class="hero">
	<h1>Find or create a group to share what you like</h1>
	<a href="/auth/register" class="btn btn-amarillo">Create account</a>
</div>

<!-- Search bar -->
<div class="buscador-inicio">
	<div class="contenedor">
		<h2>Find a group in your city</h2>
		<form action="/search" method="POST">
			<select name="category" id="category" class="categoria">
				<option value="" selected>All categories</option>
				<% categories.forEach((category) => { %>
					<option
						value="<%- category.id %>"
					><%- category.name %></option>
				<% }); %>
			</select>
			<input type="text" name="title" id="title" placeholder="Meeti title" />
			<input type="text" name="city" placeholder="City" />
			<!-- <input type="text" name="country" placeholder="Country" /> -->
			<select name="country" id="country">
				<option value="" selected>Todos</option>
				<option value="MEX">Mexico</option>
				<option value="COL">Colombia</option>
				<option value="ARG">Argentina</option>
				<option value="ESP">Spain</option>
				<option value="USA">United States</option>
				<option value="PER">Peru</option>
			</select>
			<input type="submit" value="Search" class="btn btn-rosa" />
		</form>
	</div>
</div>

<div class="contenedor">
	<h2>Upcoming Meeti's</h2>
	<div class="grid columnas-md-3">
		<% if(locals.meetis && locals.meetis.length > 0) { %>
			<% meetis.forEach((meeti) => { %>
				<!-- Use meeti card partial -->
				<%- include("components/cardMeeti", { meeti: meeti }); %>
			<% }); %>
		<% } else { %>
			<p>
				Sorry, there are no Meeti's
			</p>
		<% } %>
	</div>
</div>

<main class="bg-gris categorias">
	<h2>Find group by categories</h2>
	
	<div class="contenedor">
		<ul class="lista-categorias grid columnas-2 columnas-md-3">
			<% categories.forEach((category) => { %>
				<li>
					<a href="/category/<%- category.nameId %>">
						<img
							src="/public/img/category/<%- category.nameId %>.jpg"
							alt="<%- category.name %>"
						/>
						<p><%- category.name %></p>
					</a>
				</li>
			<% }); %>
		</ul>
	</div>
</main>

<h2>
	Nearby Meeti's
</h2>
<div class="contenedor cercanos">
	<% if(locals.nearbyMeetis?.length > 0) { %>
		<% locals.nearbyMeetis.forEach((meeti) => { %>
			<%- include("components/cardMeeti", { meeti: meeti }); %>
		<% }); %>
	<% } else { %>
		<p>There are no nearby Meetis</p>
	<% } %>
</div>

<!-- Footer -->
<div class="meeti-bg">
	<div class="contenedor meeti grid columnas-md-2">
		<section>
			<h3>Create a group</h3>
			<p>
				Share your passions and what you like with people,
				create your group today free of charge
			</p>
		</section>
		<section>
			<h3>Join a group</h3>
			<p>
				Meet people alike, join a group and receive notifications about upcoming events
			</p>
		</section>
	</div>
</div>

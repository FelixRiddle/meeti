<!-- Introduction -->
<div class="hero">
	<h1>Find or create a group to share what you like</h1>
	<a href="/auth/register" class="btn btn-amarillo">Create account</a>
</div>

<!-- Search bar -->
<div class="buscador-inicio">
	<div class="contenedor">
		<h2>Find a group in your city</h2>
		<form action="#">
			<select name="category" id="category" class="categoria">
				<option value="" disabled selected>-- Select one --</option>
				<% categories.forEach((category) => { %>
					<option
						value="<%- category.id %>"
					><%- category.name %></option>
				<% }); %>
			</select>
			<input type="text" name="name" id="name" placeholder="Meeti name" />
			<input type="text" name="city" placeholder="City" />
			<input type="text" name="country" placeholder="Country" />
			<input type="submit" value="Search" class="btn btn-rosa" />
		</form>
	</div>
</div>

